<div class="card card-success">
  <div class="card-header">
    <ul class="nav nav-tabs nav-tabs-neutral justify-content-center" role="tablist" data-background-color="orange">

      <li class="nav-item">
        <a class="nav-link active text-bold" data-toggle="tab" href="#add_product_category_tab"
          id="add_product_category_tab_link" role="tab">Add Product Category</a>
      </li>

      <li class="nav-item">
        <a class="nav-link  text-bold" data-toggle="tab" href="#view_product_category_tab"
          id="view_product_category_tab_link" role="tab">View Product Category</a>
      </li>

      <li class="nav-item">
        <a class="nav-link  text-bold" data-toggle="tab" href="#add_product_attribute_tab"
          id="add_product_attribute_tab_link" role="tab">Add Product Attributes</a>
      </li>

      <li class="nav-item">
        <a class="nav-link  text-bold" data-toggle="tab" href="#view_product_attribute_tab"
          id="view_product_attribute_tab_link" role="tab">View Product Attributes</a>
      </li>

      <li class="nav-item">
        <a class="nav-link  text-bold" data-toggle="tab" href="#add_product_tab" id="add_product_tab_link"
          role="tab">Add Product</a>
      </li>

      <li class="nav-item">
        <a class="nav-link text-bold" data-toggle="tab" href="#view_product_tab" id="view_product_tab_link"
          role="tab">View Product</a>
