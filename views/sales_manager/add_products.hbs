    </ul>
  </div>

  <div class="card-body">
    <div class="tab-content text-center">

      <div class="tab-pane active" id="add_product_category_tab" role="tabpanel">
        <div class="row justify-content-center">
          <div class="col-6">
            <form action="" id="categoryForm">
              <div class="form-group">
                <label for="productCategory">Product Category</label>
                <input type="text" class="form-control" name="productCategory" id="productCategory"
                  aria-describedby="helpId" placeholder="Product Category" required>
                {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
              </div>

              <div class="form-group">
                <label for="productSubCategory">Product Sub Category</label>
                <input type="text" class="form-control" name="productSubCategory" id="productSubCategory"
                  aria-describedby="helpId" placeholder="Product Sub Category" required>
                {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
              </div>

              <div class="upload__box_product_category_image">
                <div class="upload__btn-box_product_category_image">
                  <label class="upload__btn_product_category_image">
                    <p>Upload Product Category Image</p>
                    <input type="file" multiple="" name="product_category_image_upload" id="product_category_image_upload"
                      data-max_length="10" class="upload__inputfile_product_category_image">
                  </label>
                </div>
                <div class="upload__img-wrap_product_category_image"></div>
              </div>
              <button type="button" name="addProductCategoryBtn" id="addProductCategoryBtn"
                class="btn btn-primary btn-lg btn-block"> Submit</button>
            </form>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="view_product_category_tab" role="tabpanel">

        <div class="row">
          <div class="col-12">
            <table id="view_product_category_table" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Category</th>
                  <th>Sub Category</th>
                  <th>Action</th>
                </tr>
              </thead>

            </table>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="add_product_attribute_tab" role="tabpanel">

        <div class="row justify-content-center">
          <div class="col-6">
            <form action="" id="productAttributeForm">
              <div class="form-group">
                <label for="product_attribute_name">Product Attribute Name</label>
                <input type="text" class="form-control" name="productAttributeName" id="productAttributeName"
                  aria-describedby="helpId" placeholder="Product Attribute Name" required>
                {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
              </div>

              <div class="form-group">
                <label for="product_attribute_name">Value</label>
                <input type="text" class="form-control" name="productAttributeValue" id="productAttributeValue"
                  aria-describedby="helpId" placeholder="Value" required>
                {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
              </div>

              <button type="button" name="add_product_attribute_btn" id="add_product_attribute_btn"
                class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="view_product_attribute_tab" role="tabpanel">

        <div class="row justify-content-center">
          <div class="col-12">
            <table id="view_product_attribute_table" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Attribute Name</th>
                  <th>Attribute Value</th>
                  {{!-- <th>Action</th> --}}
                </tr>
              </thead>

            </table>
          </div>
        </div>
      </div>

      <div class="tab-pane" id="add_product_tab" role="tabpanel">
        <form action="" id="addProductForm">
          <div class="row">
          <div class="col-6">
            <div class="form-group">
              <label for="product_name">Product Name</label>
              <input type="text" class="form-control" name="product_name" id="product_name" aria-describedby="helpId"
                placeholder="Product Name" required>
              {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
            </div>

            <div class="form-group">
              <label for="product_price">Price</label>
              <input type="number" class="form-control" name="product_price" id="product_price"
                aria-describedby="helpId" placeholder="Price" required>
              {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
            </div>

            <div class="form-group">
              <label for="product_quantity">Quantity</label>
              <input type="number" class="form-control" name="product_quantity" id="product_quantity"
                aria-describedby="helpId" placeholder="Quantity" required>
              {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
            </div>

            <div class="form-group">
              <label for="product_category_list">Product Category</label>
              <select class="form-control" name="product_category_list" id="product_category_list" required>

              </select>
            </div>
            {{!-- <div class="form-group">
              <label for="product_category">Product Category</label>
              <select class="select2" name="product_category" id="product_category" multiple="multiple"
                style="width: 100%" data-placeholder="Select Class" name="select_classes[]">
                <option>1</option>
                <option>2</option>
                <option>3</option>
              </select>
            </div> --}}
          </div>

          <div class="col-6">

            <div class="form-group">
              <label for="product_attribute_list">Product Attribute</label>
              <select class="select2" name="product_attribute_list" id="product_attribute_list" multiple="multiple"
                style="width: 100%" data-placeholder="Select Class" name="select_classes[]" required>

              </select>
            </div>

            <div class="form-group">
              <label for="tags_input">Product Tags</label>
              <input type="text" class="form-control" name="tags" id="tags_input" aria-describedby="helpId"
                placeholder="Enter product tags" required>
              {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
            </div>

            <div class="form-group">
              <label for="product_description">Product Description</label>
              <textarea class="form-control" id="product_description" rows="3" required></textarea>
            </div>
          </div>

          <div class="upload__box">
            <div class="upload__btn-box">
              <label class="upload__btn">
                <p>Upload images</p>
                <input type="file" multiple="" name="product_image_upload" id="product_image_upload"
                  data-max_length="10" class="upload__inputfile" required>
              </label>
            </div>
            <div class="upload__img-wrap"></div>
          </div>
        </div>
        </form>

        <div class="row justify-content-center">
          <div class="col-6">
            <button type="button" name="add_product_btn" id="add_product_btn"
              class="btn btn-primary btn-lg btn-block">Add Product</button>
          </div>
        </div>

      </div>

      <div class="tab-pane " id="view_product_tab" role="tabpanel">

        {{!-- <div class="row">
          <div class="col-4 " style="display: grid; grid-template-columns:1fr 1fr 1fr" id="product_div">

          </div>
        </div> --}}
        <div class="row">
          <div class="col-12">
            <table id="view_product_table" class="table table-bordered table-striped">
              <thead>
                <tr>
                  {{!-- <th>ID</th> --}}
                  <th>Name</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  {{!-- <th>Description</th> --}}
                  <th>Category</th>
                  <th>Sub Category</th>
                  {{!-- <th>Attributes</th> --}}
                  {{!-- <th>Tags</th> --}}
                  <th>Images</th>
                  <th>Action</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>



