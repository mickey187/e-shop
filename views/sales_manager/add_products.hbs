<div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="">
      <div class="modal-body">
        
          <div class="form-group">
            <label for="product_name_edit" class="col-form-label">Product Name:</label>
            <input type="text" name="product_name_edit" class="form-control" id="product_name_edit" required>
          </div>
          <div class="form-group">
            <label for="product_price_edit" class="col-form-label">Price:</label>
            <input type="number" name="product_price_edit" class="form-control" id="product_price_edit" required>
          </div>
          <div class="form-group">
            <label for="product_quantity_edit">Qauntity:</label>
            <input type="number" class="form-control" name="product_quantity_edit" id="product_quantity_edit" aria-describedby="helpId" placeholder="" required>
          </div>
          <div class="form-group">
            <label for="product_description_edit">Product Description:</label>
            <textarea class="form-control" name="product_description_edit" id="product_description_edit" rows="3" required></textarea>
          </div>
          <div class="form-group">
            <label for="product_category_edit">Product Category</label>
            <select class="form-control" name="product_category_edit" id="product_category_edit" required>
              
            </select>
          </div>
          <div class="form-group">
              <label for="product_attribute_list_edit">Product Attribute</label>
              <select class="select2" name="product_attribute_list_edit" id="product_attribute_list_edit" multiple="multiple"
                style="width: 100%" data-placeholder="Select Class" name="select_attr_classes_edit[]" required>
              </select>
            </div>
          <div class="form-group">
              <label for="tags_input_edit">Product Tags</label>
              <input type="text" class="form-control" name="tags" id="tags_input_edit" aria-describedby="helpId"
                placeholder="Enter product tags" required>
              {{!-- <small id="helpId" class="form-text text-muted">Help text</small> --}}
          </div>
          <div class="form-group">
              <label for="related_product_list_edit">Related Product</label>
              <select class="select2" name="related_product_list_edit" id="related_product_list_edit" multiple="multiple"
                style="width: 100%" data-placeholder="Select Class" name="select__related_products_edit[]">
              </select>
          </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-info">Edit Product</button>
      </div>
      </form>
    </div>
  </div>
</div>